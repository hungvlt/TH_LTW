@model Web_Core.Areas.Admin.Models.RegisterViewModel
@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Đăng ký nhân viên</h2>

<form asp-area="Admin" asp-controller="Admin" asp-action="RegisterEmployee" method="post">
   @Html.AntiForgeryToken()

   <div class="form-floating mb-3">
      <input asp-for="FullName" class="form-control" placeholder="Nguyễn Văn A" />
      <label asp-for="FullName">Họ tên</label>
      <span asp-validation-for="FullName" class="text-danger"></span>
   </div>

   <div class="form-floating mb-3">
      <input asp-for="Email" class="form-control" placeholder="email@example.com" />
      <label asp-for="Email">Email</label>
      <span asp-validation-for="Email" class="text-danger"></span>
   </div>

   <div class="form-floating mb-3">
      <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
      <label asp-for="Password">Mật khẩu</label>
      <span asp-validation-for="Password" class="text-danger"></span>
   </div>

   <div class="form-floating mb-3">
      <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu" />
      <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
   </div>

   <button type="submit" class="btn btn-primary">Đăng ký</button>
   <a href="@Url.Action("Index", "Admin", new { area = "Admin" })" class="btn btn-secondary w-100">Quay về</a>
</form>

@section Scripts {
   <partial name="_ValidationScriptsPartial" />
}
