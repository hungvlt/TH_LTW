@model Web_Core.Models.Category

<div class="container mt-4">
   <div class="card shadow-lg p-4">
      <h2 class="text-primary text-center">Thêm danh mục</h2>

      <form asp-action="Add" method="post">
         <div class="mb-3">
            <label asp-for="Name" class="form-label">Tên danh mục</label>
            <input asp-for="Name" class="form-control border border-primary" />
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Thêm</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay về danh sách</a>
         </div>
      </form>
   </div>
</div>
