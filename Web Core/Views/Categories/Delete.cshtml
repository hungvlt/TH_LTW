@model Web_Core.Models.Category

<div class="container mt-4">
   <div class="card shadow-lg p-4 text-center">
      <h2 class="text-danger">Xóa danh mục</h2>
      <p class="lead">Bạn có chắc muốn xóa danh mục "<strong>@Model.Name</strong>"?</p>

      <form asp-action="DeleteConfirmed" method="post">
         <input type="hidden" asp-for="Id" />
         <button type="submit" class="btn btn-danger px-4">Xóa</button>
         <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
      </form>
   </div>
</div>
