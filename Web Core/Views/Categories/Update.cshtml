@model Web_Core.Models.Category

<div class="container mt-4">
   <div class="card shadow-lg p-4">
      <h2 class="text-warning text-center">Cập nhật danh mục</h2>

      <form asp-action="Update" method="post">
         <input type="hidden" asp-for="Id" />

         <div class="mb-3">
            <label asp-for="Name" class="form-label">Tên danh mục</label>
            <input asp-for="Name" class="form-control border border-warning" />
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>

         <div class="text-center">
            <button type="submit" class="btn btn-warning px-4">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay về danh sách</a>
         </div>
      </form>
   </div>
</div>
