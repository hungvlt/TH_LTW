@model Order

<div class="container mt-4">
	<h2 class="mb-4 text-center">📦 Thanh toán đơn hàng</h2>

	<div class="card shadow-lg p-4">
		<form asp-action="Checkout" method="post">
			<div class="mb-3">
				<label asp-for="ShippingAddress" class="form-label fw-bold">📍 Địa chỉ giao hàng</label>
				<input asp-for="ShippingAddress" class="form-control" placeholder="Nhập địa chỉ của bạn..." required />
			</div>

			<div class="mb-3">
				<label asp-for="Notes" class="form-label fw-bold">📝 Ghi chú</label>
				<textarea asp-for="Notes" class="form-control" rows="3" placeholder="Nhập ghi chú (nếu có)..."></textarea>
			</div>

			<button type="submit" class="btn btn-success w-100 py-2">
				<i class="bi bi-bag-check-fill"></i> Đặt hàng ngay
			</button>
		</form>
	</div>
</div>

<style>
	.card {
		max-width: 500px;
		margin: 0 auto;
	}
</style>
