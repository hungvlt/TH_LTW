<section class="menu-section section-padding" id="section_3" style="background-color: #4a2f1e;">
	<div class="container">
		<div class="row justify-content-center mb-4">
			<div class="col-lg-8 text-center">
				<h2 class="text-white mb-0">Thực đơn của chúng tôi</h2>
			</div>
		</div>

		<!-- Bọc hai cột bằng một div flex để giãn cách tốt hơn -->
		<div class="d-flex justify-content-center flex-wrap gap-5">
			@{
				var foodCategories = new List<string> { "Bánh Mì", "Bánh Ngọt & Tráng Miệng" };
				var drinkCategories = new List<string> { "Cà Phê", "Trà", "Sữa & Đồ Uống Đá Xay", "Yogurt & Smoothie" };
			}

			<!-- Món ăn -->
			<div class="menu-column">
				<h3 class="text-white text-center mb-3">Món ăn</h3>
				<div class="menu-list">
					<div class="scrollable-menu">
						@foreach (var item in Model.Where(p => foodCategories.Contains(p.Category.Name)))
						{
							<div class="menu-item p-3 mb-3">
								<h6 class="text-white">@item.Name</h6>
								<small class="text-light d-block mb-2">@item.Description</small>
								<div class="d-flex justify-content-between align-items-center">
									<strong class="text-warning">@item.Price.ToString("#,##0") VND</strong>
									<a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity" class="add-to-cart-btn">
										<i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
									</a>
								</div>
							</div>
						}
					</div>
				</div>
			</div>

			<!-- Đồ uống -->
			<div class="menu-column">
				<h3 class="text-white text-center mb-3">Đồ uống</h3>
				<div class="menu-list">
					<div class="scrollable-menu">
						@foreach (var item in Model.Where(p => drinkCategories.Contains(p.Category.Name)))
						{
							<div class="menu-item p-3 mb-3">
								<h6 class="text-white">@item.Name</h6>
								<small class="text-light d-block mb-2">@item.Description</small>
								<div class="d-flex justify-content-between align-items-center">
									<strong class="text-warning">@item.Price.ToString("#,##0") VND</strong>
									<a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity" class="add-to-cart-btn">
										<i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
									</a>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.menu-column {
		width: 45%;
		min-width: 320px;
	}

	.menu-item {
		background: rgba(0, 0, 0, 0.6);
		border-radius: 8px;
		padding: 15px;
		transition: transform 0.2s ease-in-out, background 0.2s;
	}

		.menu-item:hover {
			transform: scale(1.02);
			background: rgba(0, 0, 0, 0.75);
		}

	.menu-list {
		max-height: 500px;
		overflow-y: auto;
		padding-right: 10px;
	}

	.scrollable-menu {
		max-height: 500px;
		overflow-y: auto;
		padding-right: 10px;
		scrollbar-width: thin;
		scrollbar-color: #c49a6c rgba(255, 255, 255, 0.1);
	}

		/* Thanh cuộn tùy chỉnh */
		.scrollable-menu::-webkit-scrollbar {
			width: 8px;
		}

		.scrollable-menu::-webkit-scrollbar-thumb {
			background: linear-gradient(135deg, #c49a6c, #8d6748);
			border-radius: 10px;
			transition: background 0.3s ease-in-out;
		}

			.scrollable-menu::-webkit-scrollbar-thumb:hover {
				background: linear-gradient(135deg, #b07e4d, #704a34);
			}

		.scrollable-menu::-webkit-scrollbar-track {
			background: rgba(255, 255, 255, 0.05);
			border-radius: 10px;
		}

	/* Nút Thêm vào giỏ hàng */
	.add-to-cart-btn {
		background: #c49a6c;
		color: white;
		border: none;
		padding: 8px 12px;
		border-radius: 6px;
		font-size: 14px;
		display: flex;
		align-items: center;
		gap: 5px;
		cursor: pointer;
		transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
	}

		.add-to-cart-btn i {
			font-size: 16px;
		}

		.add-to-cart-btn:hover {
			background: #b07e4d;
			transform: scale(1.05);
		}

</style>

