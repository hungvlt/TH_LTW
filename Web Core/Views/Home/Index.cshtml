<section class="contact-section section-padding" id="section_5">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-12">
				<em class="text-white">Nói xin chào</em>
				<h2 class="text-white mb-4 pb-lg-2">Liên hệ</h2>
			</div>
			<div class="col-lg-6 col-12">
				<form asp-action="Contact" method="post" class="custom-form contact-form" role="form">
					<div class="row">
						<div class="col-lg-6 col-12">
							<label for="name" class="form-label">Tên <sup class="text-danger">*</sup></label>
							<input type="text" name="Name" id="name" class="form-control" placeholder="Họ và tên" required="@true" />
						</div>
						<div class="col-lg-6 col-12">
							<label for="email" class="form-label">Email <sup class="text-danger">*</sup></label>
							<input type="email" name="Email" id="email" class="form-control" placeholder="abc@gmail.com" required="@true" />
						</div>
						<div class="col-12">
							<label for="message" class="form-label">Chúng tôi có thể giúp gì cho bạn?</label>
							<textarea name="Message" rows="4" class="form-control" id="message" placeholder="Tin nhắn" required="@true"></textarea>
						</div>
					</div>
					<div class="col-lg-5 col-12 mx-auto mt-3">
						<button type="submit" class="form-control">Gửi tin nhắn</button>
					</div>
				</form>
				@if (ViewBag.Message != null)
				{
					<div class="alert alert-success mt-3">@ViewBag.Message</div>
				}
			</div>
			<div class="col-lg-6 col-12 mx-auto mt-5 mt-lg-0 ps-lg-5">
				<iframe class="google-map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4913.3293870433845!2d106.78303187590652!3d10.855743457723902!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175276e7ea103df%3A0xb6cf10bb7d719327!2sHUTECH%20University%20-%20Thu%20Duc%20Campus!5e1!3m2!1sen!2sth!4v1740623709825!5m2!1sen!2sth" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		</div>
	</div>
</section>